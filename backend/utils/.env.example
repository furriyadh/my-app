# ===========================================
# Google Ads AI Platform - Environment Variables
# متغيرات البيئة لمنصة Google Ads AI
# ===========================================

# ===========================================
# Flask Configuration
# إعدادات Flask
# ===========================================
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here

# ===========================================
# Google Ads API Configuration
# إعدادات Google Ads API
# ===========================================
GOOGLE_DEVELOPER_TOKEN=your-developer-token
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
MCC_LOGIN_CUSTOMER_ID=your-mcc-customer-id

# ===========================================
# JWT Configuration
# إعدادات JWT
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# ===========================================
# Redis Configuration
# إعدادات Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_DEFAULT_TTL=3600
REDIS_SESSION_TTL=86400
REDIS_CACHE_PREFIX=google_ads_ai:

# ===========================================
# Supabase Configuration
# إعدادات Supabase
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_AUTH_ENABLED=true
SUPABASE_EMAIL_CONFIRM=false

# ===========================================
# Email Configuration (Optional)
# إعدادات البريد الإلكتروني (اختياري)
# ===========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Google Ads AI Platform

# ===========================================
# OpenAI Configuration (Optional)
# إعدادات OpenAI (اختياري)
# ===========================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# ===========================================
# Logging Configuration
# إعدادات التسجيل
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===========================================
# Security Configuration
# إعدادات الأمان
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8

# ===========================================
# Performance Configuration
# إعدادات الأداء
# ===========================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,csv,xlsx
CACHE_TIMEOUT=300
DATABASE_POOL_SIZE=10

